# ðŸš€ Ultimate Mastra Multi-Agent System - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===== CORE API CONFIGURATION =====
NEXT_PUBLIC_API_URL=http://localhost:3000

# ===== AI SERVICES =====
# Google Gemini API (Primary LLM)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (For embeddings and backup LLM)
OPENAI_API_KEY=your_openai_api_key_here

# ===== EMAIL SERVICES =====
# SendGrid for advanced email functionality (beyond basic SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===== OPTIONAL INTEGRATIONS =====
# Twilio for SMS/Voice alerts (already installed)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Calendar API (for calendar scheduling)
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id

# ===== DATABASE (FOR PRODUCTION) =====
# For advanced memory and RAG storage
DATABASE_URL=postgresql://user:password@localhost:5432/financepulse
# or use SQLite for local development
# DATABASE_URL=file:./dev.db

# ===== SECURITY =====
# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_here

# ===== DEVELOPMENT FLAGS =====
NODE_ENV=development
MASTRA_DEBUG=true

# ===== DEMO MODE SETTINGS =====
# Enable demo mode with mock data
DEMO_MODE=true
MOCK_FRAUD_DATA=true
MOCK_EMAIL_RESPONSES=true