# ============================================
# 🌲 Twilio-Cedar OS Direct Voice Integration
# ============================================

# 📞 Twilio Configuration
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# 🤖 Cedar OS AI Configuration (Optional)
# Your Cedar OS AI agent endpoints and API key
CEDAR_OS_API_ENDPOINT=http://localhost:8080/api
CEDAR_OS_VOICE_ENDPOINT=http://localhost:8080/api/voice
CEDAR_OS_API_KEY=your_cedar_os_api_key_here
CEDAR_OS_AI_MODEL=gpt-4-turbo

# 💳 Capital One API Configuration
# Get your API key from Capital One's Nessie API
API_KEY=your_capital_one_api_key_here

# 🌐 Flask Server Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 🌍 Public Webhook URLs
# ⚠️  IMPORTANT: Update this with your ngrok URL when testing!
# Run: ngrok http 5000
# Then update PUBLIC_BASE_URL with your ngrok URL (e.g., https://abc123.ngrok.io)
PUBLIC_BASE_URL=https://your-ngrok-url.ngrok.io

# 🔐 Security
SECRET_KEY=your-secret-key-here

# 📋 Logging
LOG_LEVEL=INFO
LOG_FILE=twilio_cedar_integration.log